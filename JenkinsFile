pipeline {
    agent {
        label 'jenkins-agent'
    }
    environment {
        // You can set environment variables if needed
        NODE_HOME = tool name: 'NodeJS', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
    }
    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                // Clone the repository using the provided credentials
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/master']], // Replace 'master' with your desired branch
                    userRemoteConfigs: [[url: 'https://github.com/hamzasdiri/My-Portfolio']]
                ])
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Use the NodeJS installation to install dependencies
                sh "${NODE_HOME}/bin/npm install"
            }
        }
        
        stage('Build') {
            steps {
                // Use the NodeJS installation to build your project
                sh "${NODE_HOME}/bin/npm run build"
            }
        }
        
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Test') {
            steps {
                echo "Hello"
            }
        }
        
        stage('Deploy') {
            steps {
                echo "Heyy deploy"
            }
        }
    }
}
