pipeline {
    agent {
        label 'jenkins-agent'
    }
    tools {
        nodejs 'node'
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
                echo "heyy 1"
            }
        }

        stage('Checkout') {
            steps {
                // Clone the repository using the provided credentials
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/master']], // Replace 'master' with your desired branch
                    userRemoteConfigs: [[url: 'https://github.com/hamzasdiri/My-Portfolio']]
                ])
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
                echo "heyy 3"
            }
        }
        
        stage('Build') {
            steps {
                // Use the NodeJS installation to build your project
                //sh "${NODE_HOME}/bin/npm run build"
                echo "heyy 4"
            }
        }
        
        stage('Test') {
            steps {
                echo "Hello"
            }
        }
        
        stage('Deploy') {
            steps {
                echo "Heyy deploy"
            }
        }
    }
}
