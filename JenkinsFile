pipeline {
    agent {
        label 'jenkins-agent'
    }
    tools {
        nodejs 'node'
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/master']], // Replace 'master' with your desired branch
                    userRemoteConfigs: [[url: 'https://github.com/hamzasdiri/My-Portfolio']]
                ])
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        
        stage('Test') {
            steps {
                echo "No tests yet"
            }
        }

        stage('Sonarqube analysis') {
            steps {
                withSonarQubeEnv(credentialsId: 'jenkins-sonarqube-token') {
                        bat "sonarqube-scanner-latest/bin/sonar-scanner"
                    }
            }
        }
        
        stage('Deploy') {
            steps {
                echo "I will deploy it"
            }
        }
    }
}
